				<listheader label="Tipo"         	width="100px" align="center"/>
				<listheader label="Fecha CreaciÃ³n"  width="90px"  align="center"/>
			</listhead>
			<template name="model">
				<listitem>
					<listcell label="" width="35px" />
					<listcell label="@bind(each)" width="35px" />
				</listitem>
			</template>
		</listbox>
		</hbox>
	</window>
